<h1>Quiz</h1>
<p>Find me in app/views/quiz/index.html.erb</p>
<div>
<table border = "1">
<thead>
  <tr>
    <th>ID</th>
    <th>Actions</th>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Flight Training</th>
    <th>Why Pilot</th>
    <th>What Instructor Teach</th>
    <th>Aviation Goals</th>
    <th>Past Training</th>
    <th>Preferred Date</th>
    <th>Alternate Date</th>
    <th>Preferred Time</th>
    <th>Alternate Time</th>
    <th>Last Update</th>
  </tr>
</thead>
<tbody>
  <% @quiz_results.order(id: :desc).each do |result| %>
    <tr>
     <td><%= result.id %></td>
     <td>
        <%= link_to "Edit", edit_quiz_result_path(result) %>  <!--- delete not working ??? --->
        <%= link_to "Delete", quiz_result_path(result), method: :delete, data: { confirm: "Are you sure you want to delete this result?" } %>
        <%= link_to "Display", quiz_result_path(result) %>
      </td>

      <td><%= result.name %></td>
      <td><%= result.phone %></td>
      <td><%= result.email %></td>
      <td><%= result.flightTraining %></td>
      <td><%= result.whyPilot %></td>
      <td><%= result.instructTeach %></td>
      <td><%= result.aviationGoals %></td>
      <td><%= result.pastTraining.join(", ") %></td>
      <td><%= result.preferredDate.nil? ? "No preferred date" : result.preferredDate.strftime("%m/%d/%Y") %></td>
      <td><%= result.preferredTime %></td>
      <td><%= result.alternateDate.nil? ? "No alternate date" : result.alternateDate.strftime("%m/%d/%Y") %></td>
      <td><%= result.alternateTime %></td>
      <td><%= result.updated_at.strftime("%m/%d/%Y %I:%M %p") %></td>
   </tr>
  <% end %>
</tbody>
</table>

</div>

<%= link_to 'About', quiz_about_path %>

<%= link_to "New Quiz", new_quiz_result_path %>